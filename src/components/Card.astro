---
type Props = {
  title: string,
  image: string,
  description: string
}

const { title, description, image} = Astro.props

---
<article class="bg-surface-300 p-4 flex flex-col gap-2 rounded-md border border-surface-500">
  <section class="">
    <img src={image} class="w-full" alt="">
  </section>
  <section class="flex flex-col gap-2 mt-2">
    <h3 class="font-bold text-primary-500">{title}</h3>
    <p>{description}</p>
  </section>
</article>

